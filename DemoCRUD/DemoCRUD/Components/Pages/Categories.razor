@page "/categories"
@using DemoCRUD.Services
@using DemoCRUD.Models
@inject ICategoryService CategoryService

<h3>Quản lý Danh mục (Blazor Server CRUD)</h3>

<EditForm Model="@categoryToEdit" OnValidSubmit="SaveCategory" FormName="categoriesForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tên Danh mục:</label>
        <div class="col-sm-6">
            <InputText class="form-control" @bind-Value="categoryToEdit.Name" />
        </div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">
                @(categoryToEdit.Id == 0 ? "Thêm mới" : "Cập nhật")
            </button>

            @if (categoryToEdit.Id != 0)
            {
                <button type="button" class="btn btn-secondary" @onclick="ResetForm">Hủy</button>
            }
        </div>
    </div>
    <p>Debug Name (live): '@categoryToEdit.Name'</p>
    <ValidationMessage For="@(() => categoryToEdit.Name)" />
</EditForm>

<hr />

@if (categories == null)
{
    <p><em>Đang tải dữ liệu...</em></p>
}
else
{
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="(() => EditCategory(category))">Sửa</button>
                        <button class="btn btn-danger btn-sm" @onclick="(() => DeleteCategory(category.Id))">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Category>? categories;
    private Category categoryToEdit;

    protected override async Task OnInitializedAsync()
    {
        categoryToEdit = new Category();
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        categories = await CategoryService.GetAllCategoryAsync();
    }

    private async Task SaveCategory()
    {
        if (categoryToEdit.Id == 0)
        {
            await CategoryService.CreateCategoryAsync(categoryToEdit);
        }
        else
        {
            await CategoryService.UpdateCategoryAsync(categoryToEdit);
        }

        await LoadCategories();
        ResetForm();
        StateHasChanged();
    }

    private void EditCategory(Category category)
    {
        categoryToEdit = new Category
        {
            Id = category.Id,
            Name = category.Name
        };
    }

    private async Task DeleteCategory(int id)
    {
        await CategoryService.DeleteCategoryAsync(id);
        await LoadCategories();
        StateHasChanged();
    }

    private void ResetForm()
    {
        categoryToEdit = new Category();
    }
    
    private void UpdateName(ChangeEventArgs e)
    {
    // Cập nhật giá trị vào model
        categoryToEdit.Name = e.Value?.ToString() ?? string.Empty;

    // Buộc component render lại (rất quan trọng cho live update)
        StateHasChanged(); 
    }
}
