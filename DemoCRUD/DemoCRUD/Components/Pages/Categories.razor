@page "/categories"
@using DemoCRUD.Services
@using DemoCRUD.Models
@inject ICategoryService CategoryService

<h3>Quản lý Danh mục (Blazor Server CRUD)</h3>

@if (categories == null)
{
    <p><em>Đang tải danh mục...</em></p>
}
else
{
    <EditForm Model="@categoryToEdit" OnValidSubmit="SaveCategory">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Tên Danh mục:</label>
            <div class="col-sm-6">
                <InputText id="name" class="form-control" @bind-Value="categoryToEdit.Name" />
            </div>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary">
                    @(categoryToEdit.Id == 0 ? "Thêm mới" : "Cập nhật")
                </button>
                @if (categoryToEdit.Id != 0)
                {
                    <button type="button" class="btn btn-secondary" @onclick="ResetForm">Hủy</button>
                }
            </div>
        </div>
    </EditForm>

    <hr />

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="(() => EditCategory(category))">Sửa</button>
                        <button class="btn btn-sm btn-danger" @onclick="(() => DeleteCategory(category.Id))">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Category>? categories;
    private Category categoryToEdit = new Category();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    // READ
    private async Task LoadCategories()
    {
        categories = await CategoryService.GetAllCategoryAsync();
    }

    // CREATE và UPDATE
    private async Task SaveCategory()
    {
        if (categoryToEdit.Id == 0)
        {
            // CREATE
            await CategoryService.CreateCategoryAsync(categoryToEdit);
        }
        else
        {
            // UPDATE
            await CategoryService.UpdateCategoryAsync(categoryToEdit);
        }

        await LoadCategories();
        ResetForm();
    }

    // Hỗ trợ Sửa
    private void EditCategory(Category category)
    {
        // Tạo một bản sao để tránh thay đổi trực tiếp
        categoryToEdit = new Category { Id = category.Id, Name = category.Name };
    }

    // DELETE
    private async Task DeleteCategory(int id)
    {
        // Lưu ý: Blazor Server không có sẵn JS.InvokeAsync<bool>("confirm")
        // Bạn cần tự xây dựng dialog hoặc bỏ qua bước xác nhận.
        // Để đơn giản, ta xóa thẳng.
        await CategoryService.DeleteCategoryAsync(id);
        await LoadCategories();
    }

    // Đặt lại Form
    private void ResetForm()
    {
        categoryToEdit = new Category();
    }
}